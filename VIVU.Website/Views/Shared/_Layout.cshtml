@using Microsoft.Extensions.Options
@using VIVU.Logic.Configs
@inject IOptions<SiteConfig> siteConfig

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	@await RenderSectionAsync("Header", required: false)
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	<link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "app-assets/vendors/vendors.min.css")" asp-append-version="true" />
	<link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "app-assets/vendors/flag-icon/css/flag-icon.min.css")" asp-append-version="true" />
	<link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "app-assets/fonts/fontawesome/css/all.min.css")" asp-append-version="true" />
	<link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "app-assets/css/themes/horizontal-menu-template/materialize.css")" asp-append-version="true" />
	<link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "app-assets/css/themes/horizontal-menu-template/style.css")" asp-append-version="true" />
	<link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "app-assets/css/layouts/style-horizontal.css")" asp-append-version="true" />
	<link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "app-assets/css/pages/eCommerce-products-page.css")" asp-append-version="true" />
	<link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "app-assets/css/pages/page-contact.css")" asp-append-version="true" />
	<link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "app-assets/css/custom/custom.css")" asp-append-version="true" />
	<script>		
	</script>
</head>
<body class="horizontal-layout page-header-light horizontal-menu 2-columns  " data-open="click"
	  data-menu="horizontal-menu" data-col="2-columns">

	@await Html.PartialAsync("~/Views/Partial/MenuTop.cshtml")
	<div id="main">
	@RenderBody()
	</div>
	@await Html.PartialAsync("~/Views/Partial/Footer.cshtml")

	
	<script preload src="https://noithatphuminhkhoi.com/app-assets/js/vendors.min.js" type="text/javascript" asp-append-version="true"></script>
	<script preload src="https://noithatphuminhkhoi.com/app-assets/js/plugins.js" type="text/javascript" asp-append-version="true"></script>
	<script preload src="https://noithatphuminhkhoi.com/app-assets/js/custom/custom-script.js" type="text/javascript" asp-append-version="true"></script>
	<script preload src="https://noithatphuminhkhoi.com/app-assets/js/scripts/advance-ui-carousel.js" type="text/javascript" asp-append-version="true"></script>
	<script preload src="https://noithatphuminhkhoi.com/app-assets/js/scripts/eCommerce-products-page.js" type="text/javascript" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
