@{
    ViewData["Title"] = "Danh sách hình ảnh sản phẩm";
}
@model ProductImageQueryModel
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
                    <li class="breadcrumb-item active">Hình ảnh</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid px-0">
        <div class="row w-100 m-0">
            <div class="card w-100 p-0">
                <div class="card-body p-2">
                      <input type="hidden" asp-for="ProductId"/>
                    <div class="row">
                        <div class="col-md-6">
                            <input class="form-control" type="text" id="keywords" name="keywords" placeholder="Tên, mã,.."/>
                        </div>
                        <div class="col-4 col-md-2 col-xl-2">
                            <button class="btn btn-outline-success mt-1 mt-md-0 w-100" onclick="onSearch()">
                                <i class="fas fa-search"></i>
                                Tìm kiếm
                            </button>
                        </div>
                        <div class="col-4 col-md-2 col-xl-2">
                            <a class="btn btn-outline-success mt-1 mt-md-0 w-100" onclick="onDetail(0,'@Model.ProductId')">
                                <i class="fas fa-plus"></i>
                                Thêm
                            </a>
                        </div>
                    </div>
                </div>
                <hr/>
                <div class="row w-100 m-0 mt-2" id="list-post">
                    
                </div>
            </div>
        </div>
    </div>
</section>
<div id="modal-area-content"></div>
<div id="modal-file-content">
    @await Html.PartialAsync("~/Views/FileManager/Modal.cshtml")
</div>
<script src="~/lib/jquery.blockUI/jquery.blockUI.min.js"></script>
<script src="~/lib/sweetalert/sweetalert.min.js"></script>
<script>
    onSearch = () => {
        $.ajax({
            type: 'GET',
            url: '@Url.Action("List","ProductImage")',
            data: {
                ProductId : $('#ProductId').val(),
                keywords: $('#keywords').val(),
            },
            success: (res) => {
                $('#list-post').empty();
                $('#list-post').html(res);
            },
        })
    }
    onDetail = (id, productId) => {
        $.ajax({
            type: 'GET',
            url: '@Url.Action("Modal","ProductImage")',
            data: {
                id: id,
                productId : productId
            },
            success: (res) => {
                $('#modal-area-content').empty();
                $('#modal-area-content').html(res);
            },
        }).done(() => {
            onInit(() => {
                onSearch();
            })
        })
    }
 
    onDelete = (id) => {
        $.ajax({
            type:'POST',
            url: '@Url.Action("Delete","ProductImage")',
            data: {
                id: id
            },
            success: (res) => {
               if(res.success == true) {
                    swal({
                        title: "Thông báo",
                        text: "Dữ liệu lưu thành công!",
                        icon: "success"
                    });
                }
                else {
                    swal({
                        title: "Lỗi",
                        text: res.message,
                        icon: "error"
                    });
                }
            },
            error: (xhr, err) => {
                $.unblockUI();
                swal({
                    title: "Lỗi",
                    text: "Có lỗi trong quá trình xử lý, vui lòng thử lại sau",
                    icon: "error"
                });
                console.log(xhr.responseText);
            }
        }).done(() => {
            onSearch();
        })
    }
</script>